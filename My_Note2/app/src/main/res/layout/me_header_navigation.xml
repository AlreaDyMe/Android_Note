<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_width="match_parent" android:layout_height="165dp"
                  android:orientation="horizontal" tools:layout_editor_absoluteY="3dp"
                  app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/ic_launcher_background"
                  android:paddingTop="60dp" android:id="@+id/me_menu_head">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="74dp"
            android:layout_height="83dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:srcCompat="@mipmap/ic_launcher_round" />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp" android:layout_marginLeft="10dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already"
                    android:id="@+id/user_Name" android:visibility="visible" android:layout_marginTop="5dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我很帅 很忙"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:id="@+id/user_Resume"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>